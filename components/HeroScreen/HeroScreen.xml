<component name="HeroScreen" extends="Group" initialFocus="RowList">

  <children>
    <!-- For transition animation -->
    <FadingBackground
      id="Background"
      width="1920"
      height="1080"
      color="0x000000"
      ShadeOpacity="0.8" />

    <!--Navigation Bar-->
    <Rectangle 
        id = "listContainer" 
        height = "150" 
        color = "0x00000" 
        opacity = "0.4" 
        width = "10000"/>
    <Group
        id = "NavBar"
        layoutDirection="horiz" 
        itemSpacings="[1]" 
        horizAlignment="left">
      <Poster
        id="testPoster"
        uri="pkg:/images\navbar-logo.png"
        translation="[10,50]" />
      <LabelList
          id = "Home"
          translation = "[375,50]"
          itemSize = "[140,50]"
          font = "font:LargeBoldSystemFont"
          focusedFont="font:LargeBoldSystemFont"
          textHorizAlign = "center"
          focusBitmapBlendColor="0x000000"
          color="0xffffff">
        <ContentNode id = "HomeNode" role = "content" >
          <ContentNode title = "Home"/>
        </ContentNode>
      </LabelList>
      <LabelList
          id = "Show"
          translation = "[580,50]"
          itemSize = "[150,50]"
          font = "font:LargeBoldSystemFont"
          focusedFont="font:LargeBoldSystemFont"
          textHorizAlign = "center"
          focusBitmapBlendColor="0x000000"
          color="0xffffff">
        <ContentNode id = "ShowNode" role = "content" >
          <ContentNode title = "Shows"/>
        </ContentNode>
      </LabelList>
      <LabelList
          id = "Film"
          translation = "[795,50]"
          itemSize = "[140,50]"
          font = "font:LargeBoldSystemFont"
          focusedFont="font:LargeBoldSystemFont"
          textHorizAlign = "center"
          focusBitmapBlendColor="0x000000"
          color="0xffffff">
        <ContentNode id = "FilmsNode" role = "content" >
          <ContentNode title = "Films"/>
        </ContentNode>
      </LabelList>
       <LabelList
          id = "About"
          translation = "[1000,50]"
          itemSize = "[230,50]"
          font = "font:LargeBoldSystemFont"
          focusedFont="font:LargeBoldSystemFont"
          textHorizAlign = "center"
          focusBitmapBlendColor="0x000000"
          color="0xffffff">
        <ContentNode id = "AboutNode" role = "content" >
          <ContentNode title = "About Us"/>
        </ContentNode>
      </LabelList>
      
    </Group> 

    <!-- The main content -->
    <RowList
	    id="RowList"
      itemComponentName="customItem"
      focusXOffset="[165]"
      itemSize="[1920,220]"
      numRows="9"
      rowFocusAnimationStyle="FixedFocusWrap"
      rowHeights="[800,300,615]"
      rowItemSize="[[1600,700],[375,197],[375,526],[375,197]]"
      rowItemSpacing="[[30,0]]"
      rowLabelOffset="[[165,8]]"
      showRowLabel="[false,true]"
      showRowCounter="[true,true,true,false]"
      translation="[0,155]"/>

    <!-- For transition animation -->
    <Poster
      translation="[0,1000]"
      uri="pkg:/images/BG_dark_down.png"
      width="2000"
      height="95" />
  </children>

  <interface>
    <!-- Grid Content Node -->
    <field id="content" type="node" alias="RowList.content" />

    <!-- Row item selection handler -->
    <field id="rowItemSelected" type="intarray" alias="RowList.rowItemSelected" alwaysnotify="true"/>

    <!-- Row item focused handler - sets background image uri and focusedContent field -->
    <field id="itemFocused" type="intarray" alias="RowList.rowItemFocused" onChange="OnItemFocused"/>

    <!-- Interface to focused item (Content Node) -->
    <field id="focusedContent"  type="node"/>

    <!-- # of requests that have bad/no content (not a 200 response) -->
    <field id="numBadRequests" type="integer"/>
  </interface>

  <script type="text/brightscript" uri="pkg:/components/HeroScreen/HeroScreen.brs" />

</component>
