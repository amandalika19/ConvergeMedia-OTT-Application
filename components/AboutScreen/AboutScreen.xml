<component name="AboutScreen" extends="Group" initialFocus="itemMask">
  <children>

    <!-- For transition animation -->
    <FadingBackground
      id="Background"
      width="1920"
      height="1080"
      color="0x000000"
      ShadeOpacity="0.9" />

       <LayoutGroup
            translation = "[ 0, 0 ]"
            itemSpacings = "[ 0 ]"
        >
            <RowList 
                id = "aboutrow" 
                translation = "[ 0, 0 ]" 
                itemComponentName = "RowListItem" 
                numRows = "4" 
                itemSize = "[ 1608, 308 ]" 
                rowItemSize = "[ [536, 308] ]" 
                itemSpacing = "[ 0, 0 ]" 
                drawFocusFeedback = "false" 
                vertFocusAnimationStyle = "fixedFocusWrap" 
                rowFocusAnimationStyle = "fixedFocusWrap" />
        </LayoutGroup>

        <Group >
          <Poster id="intro_picture" uri="pkg:/images/intro-picture.jpg" width = "1900" height = "1040" translation="[5,25]" />
          <Label id="texta1" text="CHANGING THE NARRATIVE" fontSize = "54" translation = "[50,410]" textStyle = "bold" />
          <Label id="texta2" text="Content and local news specifically for the Northwest’s Black community." fontSize = "20" translation="[100,480]" />
          <Label id="texta3" text="We believe that the Black community deserves authentic representation," fontSize = "20" translation="[150,530]" />
          <Label id="texta4" text="a focus on our community’s issues, and equitable access to elected officials," fontSize = "20" translation="[200,580]" />
          <Label id="texta5" text="leadership, and governmental information." fontSize = "20" translation = "[250,630]" />
        </Group>

        <LayoutGroup
            id="buttons"
            layoutDirection="horiz"
            translation="[500,800]"
            itemSpacings="[16]">
            <Button
                  id="donate_button"
                  text="SUPPORT INDEPENDENT BLACK MEDIA"
              height="60"
              minWidth="100"
              maxWidth="1000"
              iconUri="pkg:/images/Donate-button.png"
              focusedIconUri="pkg:/images/Donate-button.png"
                  translation="[500, 800]" />
          </LayoutGroup>

  </children>

  <script type="text/brightscript" uri="pkg:/components/AboutScreen/AboutScreen.brs" />

</component>
